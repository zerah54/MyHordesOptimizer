{
    "hosting": [
        {
            "target": "prod",
            "public": "dist/MyHordesOptimizerWebsite/browser",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "dev",
            "public": "dist/MyHordesOptimizerWebsite/browser",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                },
                {
                    "source": "/",
                    "destination": "/index.html"
                },
                {
                    "source": "404.html",
                    "destination": "/index.html"
                },
                {
                    "source": "login",
                    "destination": "https://api.myhordesoptimizer.fr/login"
                }
            ],
            "redirects": [
                {
                    "source": "**",
                    "destination": "/index.html",
                    "type": 301
                },
                {
                    "source": "/",
                    "destination": "/index.html",
                    "type": 301
                },
                {
                    "source": "404.html",
                    "destination": "/index.html",
                    "type": 301
                },
                {
                    "source": "login",
                    "destination": "https://api.myhordesoptimizer.fr/login",
                    "type": 301
                }
            ]
        }
    ]
}
