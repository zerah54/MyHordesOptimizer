{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "MyHordesOptimizerWebsite": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                },
                "@schematics/angular:application": {
                    "strict": true
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "mho",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "preserveSymlinks": true,
                        "outputPath": "dist/my-hordes-optimizer-website",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "tsConfig": "tsconfig.app.json",
                        "polyfills": [
                            "zone.js"
                        ],
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            "src/assets/img",
                            "src/robots.txt"
                        ],
                        "styles": [
                            "src/styles.scss",
                            "src/assets/scss/material-theme/theming.scss"
                        ],
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "src/assets/scss",
                                "src/assets/scss/**/"
                            ]
                        },
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "100mb",
                                    "maximumError": "500mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "500kb",
                                    "maximumError": "1mb"
                                }
                            ],
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "buildOptimizer": false,
                            "optimization": false,
                            "vendorChunk": true,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "browserTarget": "MyHordesOptimizerWebsite:build:production"
                        },
                        "development": {
                            "browserTarget": "MyHordesOptimizerWebsite:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "MyHordesOptimizerWebsite:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "karmaConfig": "karma.conf.js",
                        "tsConfig": "tsconfig.spec.json",
                        "polyfills": [
                            "zone.js",
                            "zone.js.testing"
                        ],
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            "src/assets/img"
                        ],
                        "styles": [
                            "src/styles.scss"
                        ],
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "src/assets/scss",
                                "src/assets/scss/**/"
                            ]
                        },
                        "scripts": []
                    }
                }
            },
            "i18n": {
                "sourceLocale": "fr",
                "locales": {
                    "de": "src/assets/i18n/xlf-files/messages.de.xlf",
                    "en": "src/assets/i18n/xlf-files/messages.en.xlf",
                    "es": "src/assets/i18n/xlf-files/messages.es.xlf"
                }
            }
        }
    }
}
